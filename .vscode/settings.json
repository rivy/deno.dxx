{
	"[typescript]": { "editor.defaultFormatter": "dprint.dprint" },
	"deno.enable": true,
	"deno.lint": true,
	"deno.unstable": true,
	"editor.formatOnSave": true,
	"files.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/CVS": true,
		"**/.DS_Store": true,
		"node_modules": true,
		".history": true,
		".nyc_output": true
	},
	"todo-tree.filtering.excludeGlobs": ["build", "dist"],
	// remove `"typescript.validate.enable": false` when 'denoland/vscode_deno' issue is resolved
	// ref: <https://github.com/denoland/vscode_deno/issues/455>, <https://github.com/denoland/vscode_deno/issues/581>
	"typescript.validate.enable": false
}
